doctype html
html
	head
	title= title
	link(rel='stylesheet', href='/stylesheets/style.css')
	link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
	script(src='/socket.io.js')
	script(type="text/javascript").
		var data = !{JSON.stringify(data)}
	script(src='/addmovie.js')
	body
		block content
			div#bgheader
				h1
					|Add New Movie
				div#header
					ul#navheader
						a(href='/movies')
							li
								|Home
							li
								|#{data.user.firstname} #{data.user.lastname}
						a(href='/logout')
							li
								|Logout
			div.container
				div.row
					div.col-sm-6.col-md-4.col-md-offset-4
							div.account-wall
								form(class='form-signin', action='/addmovie', method='POST')
									input(type='text', name='movie' class='form-control', placeholder='Movie Title',required, autofocus)
									select(class='genreSelect' name='genre')
										option action
										option adventure
										option animation
										option biography
										option comedy
										option crime
										option documentary
										option drama
										option family 
										option fantasy
										option filmnoir
										option history
										option horror
										option music
										option musical
										option mystery
										option romance
										option scifi
										option sport
										option thriller
										option war
										option western
									button(class='btn btn-lg btn-primary btn-block', type='submit') Add Movie
						p
							|#{message}